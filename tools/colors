function colors_constructor {
	autoload -U colors
	colors
}

function colors_help {
	retval=( "Set environment variables for controlling color. This is really long should be more than 80 chars lets see if it wraps." )
}

function colors_destructor {
	unset fg fg_bold fg_no_bold
	unset bg bg_bold bg_no_bold
	unset bold_color reset_color
	unset colour color
}

# vim:ft=zsh
