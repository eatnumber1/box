function assert_help {
	retval=( "Assert some condition" )
}

if (( $+ENABLE_ASSERT )); then
	function assert_constructor {
		grab messages
		# Also need zsh/parameter p:functrace
	}

	function assert {
		[[ $# -ge 1 ]] || return 255

		if ! eval "$1"; then
			shift
			error "Assertion failed at $functrace[1]"
			exit 255
		fi
	}
else
	function assert {
		return 0
	}
fi

# vim:ft=zsh
