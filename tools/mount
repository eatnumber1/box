function mount_constructor {
	grab assert binary
	binary mount
}

function mount_destructor {
	unset -f mounted
}

function mounted {
	assert "[[ $# -eq 2 ]]"
	local mountpoint="$1" fstype="$2" REPLY
	mount -t "$fstype" | while read -r; do
		set -- ${=REPLY}
		[[ $3 == $mountpoint ]] && return 0
	done
	return 1
}

# vim:ft=zsh
